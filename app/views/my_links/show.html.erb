<% if user_signed_in? && current_user.id == @my_link.user.id %>
<div id="favorites_<%= @my_link.id %>">
  <%= render 'favorites/fav', my_link: @my_link %>
</div>

<div class="border"></div>

  <%= form_with model: @link_group, url: link_groups_path, method: :POST, local: true do |f| %>
    <%= f.hidden_field :my_link_id, :value => @my_link.id %>
    
    <div class="mb-3">
      <%= f.label :"リンクタイトル" %>
      <%= f.text_field :url_title, placeholder: "タイトルを入力", class: 'form-control' %>
    </div>
    
    <div class="mb-3">
      <%= f.label :"ストックするURL" %>
      <%= f.text_field :url, placeholder: "URLを入力", class: 'form-control' %>
    </div>
  
    <div class="actions right">
      <%= f.submit "追加する", class: 'btn btn-primary' %>
    </div>
  <% end %>
  
<% else %>

  <div id="favorites_<%= @my_link.id %>">
    <%= render 'favorites/fav', my_link: @my_link %>
  </div>
<% end %>
