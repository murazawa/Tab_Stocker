<h1>あなたのリンク集</h1>

<%= form_with model: @link, url: my_links_path, method: :POST, local: true do |f| %>
  <div class="field">
    <%= f.label :"タイトル" %>
    <%= f.text_field :title, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :"説明" %>
    <%= f.text_field :description, autofocus: true %>
  </div>

  <div class="actions">
    <%= f.submit "リンクタブ集を追加する" %>
  </div>
<% end %>

<% @links.each do |link| %>
<ul>
  <li><%= link_to link_group_path(link) do %><%= link.title %><% end %></li>
  <li><%= link.description %></li>
  <li><%= link.status %></li>
  <li><%= link_to "編集する", edit_my_link_path(link) %></li>
  <li><%= link_to "削除する", my_link_path(link), method: :DELETE %></li>
</ul>
<% end %>