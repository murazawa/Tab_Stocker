<%= form_with model: @link_group, url: link_groups_path, method: :POST, local: true do |f| %>
  <%= f.hidden_field :my_link_id, :value => @my_link.id %>
  <div class="field">
    <%= f.label :"リンクタイトル" %>
    <%= f.text_field :url_title, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :"ストックするURL" %>
    <%= f.text_field :url, autofocus: true %>
  </div>

  <div class="actions">
    <%= f.submit "リンクタブを追加する" %>
  </div>
<% end %>


<% @my_link.link_groups.each do |link_group| %>
  <ul>
    <li><%= link_group.url_title %></li>
    <li><% if link_group.url.nil? %>
          <%= link_group.url %>
        <% else %>
          <%= Rinku.auto_link(link_group.url, :all, 'target="_blank"').html_safe %>
        <% end %>
    </li>
    <li><%= link_to "編集する", edit_link_group_path %></li>
  </ul>
<% end %>
